<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LinearMain1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/imageView_signUp"
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:src="@drawable/sign_up"
                />

            <TextView
                android:id="@+id/Sign_Up_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="35sp"
                android:paddingBottom="5dp"
                android:paddingLeft="130dp"
                android:textColor="@color/curve_color"
                />
            <View
                android:id="@+id/view_SignUp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/text_color"

                />
            <LinearLayout
                android:id="@+id/LinearsignUp_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am a : "
                    android:textColor="@color/curve_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="15dp"
                    android:paddingLeft="34dp"
                    />
<RadioGroup
    android:id="@+id/radio_group_ID"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    >
                <RadioButton
                    android:id="@+id/radioButton_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Patient"
                    android:textSize="18sp"
                    android:textColorHint="@color/curve_color"
                    android:textColor="@color/text_color"
                    />

                <RadioButton
                    android:layout_marginStart="15dp"
                    android:textColorHint="@color/curve_color"
                    android:id="@+id/radioButton_Doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Doctor"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    />
        </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Linearfor_Databff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/LinearFor_Partition1sre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/First_Name_Textwrw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="35dp"
                        android:text="Name"
                        android:textColor="@color/curve_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_First_Namewer"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edit_text_background"
                        android:ems="30"
                        android:gravity="center"
                        android:hint="Enter your Name"
                        android:inputType="textPersonName"

                        android:textAlignment="center"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearFor_Partition2wer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/EmailTextwerwe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="35dp"
                        android:text="Username"
                        android:textColor="@color/curve_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_Last_nameqrr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_text_background"
                        android:ems="30"
                        android:gravity="center"
                        android:hint="Username"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/DoctorLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"

                >
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/curve_color"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="346dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:hint="@string/Select"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/CategoryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/curve_color"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="346dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:hint="@string/Select"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_Category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none" />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/national_Id_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="National ID No"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/curve_color"
                    />

                <EditText
                    android:id="@+id/edit_national_ID"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ems="30"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:paddingRight="32dp"
                    android:hint="Enter National ID No"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/edit_text_background"
                    />


                <TextView
                    android:id="@+id/Registration_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registration No"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/curve_color"
                    />

                <EditText
                    android:id="@+id/edit_Regis_no"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/edit_text_background"
                    android:ems="30"
                    android:gravity="center"
                    android:hint="Enter Registration No."
                    android:inputType="textPersonName"
                    android:paddingRight="32dp"
                    android:textAlignment="center"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/GenderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/curve_color"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="346dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:hint="@string/Select"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/auto_complete_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none" />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/Email_Reg_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/curve_color"
                    />

                <EditText
                    android:id="@+id/edit_Reg_Email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ems="30"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:paddingRight="32dp"
                    android:hint="Enter Email"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/edit_text_background"
                    />

                <TextView
                    android:id="@+id/Reg_password_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/curve_color"
                    />

                <EditText
                    android:id="@+id/edit_Reg_pass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ems="30"
                    android:inputType="textPassword"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:paddingRight="32dp"
                    android:hint="Enter Password"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/edit_text_background"
                    />

                <TextView
                    android:id="@+id/Reg_Repassword_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/curve_color"
                    />

                <EditText
                    android:id="@+id/edit_Reg_Repass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ems="30"
                    android:inputType="textPassword"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:paddingRight="32dp"
                    android:hint="Re-type Password"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginBottom="30dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/registration_Button1"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/background_btn"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:drawableEnd="@drawable/circle"
                    android:paddingStart="45dp"
                    />

                <TextView
                    android:id="@+id/Member_Lgoin_Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already a member? Log In"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="85dp"
                    android:textColor="@color/curve_color"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="85dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


